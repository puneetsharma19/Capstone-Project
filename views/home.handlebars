<div id="container" class="container-fluid" style="width: auto;height: 100vh; overflow:auto;">

    <div class="mt-4 mb-4 mx-auto">
        <h1 style="text-align: center; color:rgb(234 236 246)">Welcome to Sales Prediction Web App</h1>
    </div>

    <div style="height: 22vh;"></div>

    <div class="card mx-auto col-sm-7" style="background:inherit; background-image:linear-gradient(rgba(240,240,240,0.8), rgba(240,240,240,0.8));">
        <div class="card-body">
            <h4 class="card-title" style="text-align: center; ;"><b>Select Product category</b></h4>
            <div class="d-flex justify-content-center flex-wrap">
                <button id="booksBtn" type="button" class="btn btn-outline-secondary m-2 col-md-3 "><b>Books</b></button>
                <button id="clothesBtn" type="button" class="btn btn-outline-secondary m-2 col-md-3 "><b>Clothes</b></button>
                <button id="gamesBtn" type="button" class="btn btn-outline-secondary m-2 col-md-3 "><b>Video Games</b></button>
            </div>
        </div>
    </div>

    <div style="height: 10vh;"></div>

    <div class="card mx-auto col-sm-7 mb-4" id="booksForm" style="display: none;"> 
        <div class="card-body">
            <h4 class="card-title" style="text-align: center;"><b>Enter Book Attributes</b></h4>
            <form action="/predictions" method="POST">
                <div class="form-group" style="display: none;">
                    <input type="text" name="product" value="Books">
                </div>
                <div class="form-group">
                    <label><b>Genre</b></label>
                    <select class="custom-select" name="genre" required="true">
                        <option selected style="display: none;">Choose Genre</option>
                        <option>Children</option>
                        <option>Comics</option>
                        <option>Fiction</option>
                        <option>Foreign Language</option>
                        <option>Genere Fiction</option>
                        <option>Non-fiction</option>
                    </select>
                </div>
                <div class="form-group">
                    <label><b>Publisher Type</b></label>
                    <select class="custom-select" name="publisherType" required="true">
                        <option selected style="display: none;">Choose Publisher Type</option>
                        <option>Amazon</option>
                        <option>Big Five</option>
                        <option>Indian</option>
                        <option>Single Author</option>
                        <option>Small/ Medium</option>
                    </select>
                </div>
                <div class="form-group">
                    <label><b>Total Reviews</b></label>
                    <input type="number" class="form-control" name="totalReview" placeholder="Enter total reviews" required="true">
                </div>
                <div class="form-group">
                    <label><b>Sale Price</b></label>
                    <input type="number" class="form-control" name="salePrice" placeholder="Enter sale price" required="true">
                </div>
                <div class="form-group">
                    <label><b>Average Rating</b></label>
                    <input type="number" step="0.01" class="form-control" name="averageRating" placeholder="Enter average rating" required="true">
                </div>
                <div class=" d-flex justify-content-center">
                    <button type="submit" class="btn btn-outline-secondary m-2 col-md-3 "><b>Make Predictions</b></button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mx-auto col-sm-7 mb-4" id="gamesForm" style="display: none;"> 
        {{!-- var year_of_release = 0;
        var critic_score = 0;
        var critic_count = 0;
